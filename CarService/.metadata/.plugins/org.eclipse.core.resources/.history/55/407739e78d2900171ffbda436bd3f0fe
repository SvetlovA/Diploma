package ru.rsreu.carservice.controller.actions.utils;

public class BaseUtils {
	private static final String ACTION_PARAMETER_NAME = "action";
	private static final String ERROR_MESSAGE_PARAMETER_NAME = "errorMessage";
	
	private BaseUtils() {
	}
	
	public static String getUrl(String urlPattern, String action) {
		StringBuilder url = new StringBuilder();
		url.append(urlPattern);
		url.append("?");
		url.append(ACTION_PARAMETER_NAME);
		url.append("=");
		url.append(action);
		return url.toString();
	}
	
	public static String getUrl(String urlPattern, String action, String errorMessage) {
		StringBuilder url = new StringBuilder(BaseUtils.getUrl(urlPattern, action));
		url.append("&");
		url.append(ERROR_MESSAGE_PARAMETER_NAME);
		url.append("=");
		url.append(errorMessage);
		return url.toString();
	}
	
	public static String getErrorUrl(String url, String errorMessage) {
		StringBuilder baseUrl = new StringBuilder(url);
	}
}
